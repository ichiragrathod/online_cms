<h1> All Users</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>City</th>
      <th>Total Complaints</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id%> </td>
        <td><%= user.name%></td>
        <td><%= user.email%></td> 
        <td><%= user.phone_number%></td>
        <td><%= user.address%></td> 
        <td><%= user.city%> </td>
        <td><%= user.complaints.count%></td>
        <td><%= button_to 'Delete User', destroy_user_path(user.id), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure to delete this user?" }  %> </td>
      </tr>
    <% end %>   
  </tbody>
</table>

